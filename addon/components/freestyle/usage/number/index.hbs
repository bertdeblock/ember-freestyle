<Freestyle::Usage::Argument
  @type="Number"
  @name={{@name}}
  @description={{@description}}
  @required={{@required}}
  @defaultValue={{@defaultValue}}
>
  {{#if (is-present @min @max)}}
    <input
      type="range"
      value={{@value}}
      min={{@min}}
      max={{@max}}
      step={{if @step @step 1}}
      {{on 'input' this.onInput}}
    />
    {{@value}}
  {{else}}
    <input
      type="number"
      value={{@value}}
      step={{if @step @step 1}}
      {{on 'input' this.onInput}}
    />
  {{/if}}
</Freestyle::Usage::Argument>